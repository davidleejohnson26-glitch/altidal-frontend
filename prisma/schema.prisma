// prisma/schema.prisma
// Learn more: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  // Use the pooled connection for app/runtime (Node on Vercel)
  url       = env("DATABASE_URL")
  // Use the direct connection for migrations/introspection
  directUrl = env("DIRECT_URL")
}

generator client {
  provider      = "prisma-client-js"
  // Ensures Prisma binary works on Vercel's Linux image
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Leg {
  id        String   @id
  fromIata  String
  fromName  String
  fromCity  String
  toIata    String
  toName    String
  toCity    String
  departAt  DateTime
  priceUSD  Int
  acType    String
  acClass   String   // 'light' | 'midsize' | 'super-midsize' | 'heavy' | 'ultra-long'
  seats     Int
  operator  String
  notes     String?
  url       String?  // source URL
  fromIcao  String?  // ICAO origin
  toIcao    String?  // ICAO destination
  createdAt DateTime @default(now())

  @@index([fromIata, toIata, departAt])
  @@index([operator, departAt])
  @@index([fromIcao, toIcao])
}