datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Leg {
  id        String   @id
  fromIata  String
  fromName  String
  fromCity  String
  toIata    String
  toName    String
  toCity    String
  departAt  DateTime
  priceUSD  Int
  acType    String
  acClass   String   // 'light' | 'midsize' | 'super-midsize' | 'heavy' | 'ultra-long'
  seats     Int
  operator  String
  notes     String?
  createdAt DateTime @default(now())

  @@index([fromIata, toIata, departAt])
}