generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Leg {
  id        String   @id
  fromIata  String
  fromName  String
  fromCity  String
  toIata    String
  toName    String
  toCity    String
  departAt  DateTime
  priceUSD  Int
  acType    String
  acClass   String
  seats     Int
  operator  String
  notes     String?
  createdAt DateTime @default(now())
  fromIcao  String?
  toIcao    String?
  url       String?

  @@index([fromIata, toIata, departAt])
}
