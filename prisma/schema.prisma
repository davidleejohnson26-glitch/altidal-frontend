// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Leg {
  id        String   @id
  operator  String

  fromIata  String
  fromName  String
  fromCity  String?      // optional

  toIata    String
  toName    String
  toCity    String?      // optional

  departAt  DateTime?    // optional
  priceUSD  Int          @default(0)   // default 0
  acType    String?      // optional
  acClass   String?      // optional
  seats     Int?         // optional

  notes     String?
  createdAt DateTime @default(now())
  fromIcao  String?
  toIcao    String?
  url       String?

  @@index([fromIata, toIata, departAt])
}